{
  "manifest_version": 2,

  "name": "SteemPlus",
  "description": "Lightweight toolbox for Steemit",
  "version": "1.0.0.3",

  "browser_action": {
    "default_icon": "img/logo.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],

  "web_accessible_resources": [
    "img/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://steemit.com/*"],
      "js": ["jquery.js", "steemplus.js"],
      "permissions": [
        "activeTab",
        "storage"
      ]
    }
  ]
}